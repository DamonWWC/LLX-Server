# 林龍香大米商城后端服务环境变量配置示例
# 复制此文件为 .env 并修改相应的值

# ===========================================
# 数据库配置
# ===========================================
# PostgreSQL 数据库密码（请使用强密码）
DB_PASSWORD=your_strong_password_here

# ===========================================
# Redis 配置
# ===========================================
# Redis 密码（请使用强密码）
REDIS_PASSWORD=your_redis_password_here

# ===========================================
# 应用配置
# ===========================================
# 应用环境 (Development/Production)
ASPNETCORE_ENVIRONMENT=Production

# 应用端口
ASPNETCORE_URLS=http://+:8080

# ===========================================
# 数据库连接池配置
# ===========================================
# 最小连接池大小
DB_MIN_POOL_SIZE=5

# 最大连接池大小
DB_MAX_POOL_SIZE=100

# 连接生命周期（秒）
DB_CONNECTION_LIFETIME=300

# 命令超时时间（秒）
DB_COMMAND_TIMEOUT=30

# ===========================================
# 性能配置
# ===========================================
# 慢请求阈值（毫秒）
PERFORMANCE_SLOW_REQUEST_THRESHOLD=1000

# ===========================================
# 日志配置
# ===========================================
# 日志级别 (Trace/Debug/Information/Warning/Error/Critical)
LOG_LEVEL=Information

# 日志文件最大大小（MB）
LOG_MAX_FILE_SIZE=50

# 日志文件保留数量
LOG_MAX_FILE_COUNT=5

# ===========================================
# 安全配置
# ===========================================
# 配置加密密钥（32位随机字符串）
CONFIG_ENCRYPTION_KEY=your_32_character_encryption_key_here

# ===========================================
# 监控配置
# ===========================================
# 健康检查间隔（秒）
HEALTH_CHECK_INTERVAL=30

# 健康检查超时（秒）
HEALTH_CHECK_TIMEOUT=10

# ===========================================
# 时区配置
# ===========================================
# 时区设置
TZ=Asia/Shanghai

# ===========================================
# 生产环境特定配置
# ===========================================
# 是否启用详细错误信息（生产环境建议设为false）
ENABLE_DETAILED_ERRORS=false

# 是否启用敏感数据日志（生产环境建议设为false）
ENABLE_SENSITIVE_DATA_LOGGING=false

# ===========================================
# 缓存配置
# ===========================================
# Redis 最大内存（MB）
REDIS_MAX_MEMORY=256

# Redis 内存淘汰策略
REDIS_MAX_MEMORY_POLICY=allkeys-lru

# ===========================================
# 部署配置
# ===========================================
# 容器重启策略
RESTART_POLICY=unless-stopped

# 容器资源限制 - 内存（MB）
CONTAINER_MEMORY_LIMIT=512

# 容器资源限制 - CPU（核心数）
CONTAINER_CPU_LIMIT=0.5

# ===========================================
# 网络配置
# ===========================================
# 内部网络子网
INTERNAL_NETWORK_SUBNET=172.20.0.0/16

# API 服务端口
API_PORT=8080

# 数据库端口
DB_PORT=5432

# Redis 端口
REDIS_PORT=6379