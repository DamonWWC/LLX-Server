{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Information",
            "Microsoft.EntityFrameworkCore": "Information",
            "LLX.Server": "Debug"
        },
        "Console": {
            "IncludeScopes": true,
            "TimestampFormat": "yyyy-MM-dd HH:mm:ss "
        },
        "File": {
            "LogDirectory": "logs",
            "RetainedFileCountLimit": 7,
            "MinimumLevel": "Debug"
        }
    }
}